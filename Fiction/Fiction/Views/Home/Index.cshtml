@model HomeIndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">General info</h1>

    <table class="table" style="text-align: center">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Age</th>
            <th>Story name</th>
        </tr>
        @foreach (var character in Model.Characters)
        {
            <tr>
                <td>@character.Id</td>
                <td>@character.Name</td>
                <td>@character.Age</td>
                <td>@character.Story.Name</td>
            </tr>
        }
    </table>

    <table class="table" style="text-align: center">
        <tr>
            <th>Id</th>
            <th>Name</th>
        </tr>
        @foreach (var character in Model.Stories)
        {
            <tr>
                <td>@character.Id</td>
                <td>@character.Name</td>
            </tr>
        }
    </table>
</div>
